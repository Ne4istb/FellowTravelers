<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/register_order_relative_lt_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/register_order_btn_send"
        android:layout_alignParentTop="true"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:paddingTop="30dip" >

        <EditText
            android:id="@+id/register_order_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="117dp"
            android:gravity="center"
            android:hint="Номер телефона"
            android:inputType="phone" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/register_order_edit_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_order_edit_phone"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:hint="Предполагаемая цена"
            android:inputType="number" />

        <Button
            android:id="@+id/register_order_btn_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_order_edit_price"
            android:text="Откуда" />

        <Button
            android:id="@+id/register_order_btn_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_order_btn_from"
            android:text="Куда" />
    </RelativeLayout>

    <Button
        android:id="@+id/register_order_btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Отправить" />

</RelativeLayout>